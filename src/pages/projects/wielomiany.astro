---
import Layout from '../../layouts/Layout.astro';
import ChatMessage from '../../components/projects/wielomiany/ChatMessage.astro';
import UserMessage from '../../components/projects/wielomiany/UserMessage.astro';

---

<Layout>
	<main class="bg-[#212121]">
		<section class="flex items-center justify-center font-sans font-bold h-[92.5vh]">
			<h1 class="text-zinc-50 text-[10vw]">Wielomiany</h1>
		</section>
		<section>
			<UserMessage messageText="Czym są wielomiany?"/>
			<ChatMessage messageText="Wielomiany to wyrażenia algebraiczne zbudowane z jednej lub więcej zmiennych (np. x) oraz stałych, połączonych operacjami dodawania, odejmowania i mnożenia, a także potęgowania do liczb całkowitych nieujemnych."/>
		</section>
	</main>
</Layout>
