---
const { title, date, content } = Astro.props;
---

<article class="blog-post">
    <header>
        <h2 class="text-2xl font-bold">{title}</h2>
        <p class="text-sm text-gray-500">{date}</p>
    </header>
    <section class="mt-4">
        <div class="prose" is:raw>{content}</div>
    </section>
</article>
