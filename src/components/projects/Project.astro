---
const { projectName, projectDesc, projectUrl } = Astro.props;
---

<a href={projectUrl}>
    <div>
        <h1>{projectName}</h1>
        <p>{projectDesc}</p>
    </div>
</a>

<style>
    :root {
        --primary: #f0f0f0;
        --secondary: #d1d1d1;
        --tertiary: #757575;
        --quaternary: #ffffff21;
    }

    a {
        text-decoration: none;
        color: var(--primary-color);
        font-family: 'Montserrat', sans-serif;
        width: 25%;
        height: 15%;
    }

    a div h1 {
        color: var(--primary);
    }

    a div p {
        color: var(--tetriary);
    }

    
    a div {
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: left;
        padding: 1em;
        background-color: var(--quaternary-color);
        border: 2px solid var(--quaternary-color);
        border-radius: 1em;
        width: 25%;
        height: 15%;
        -moz-box-shadow: inset 0 0 50px -20px var(--quaternary-color);
        -webkit-box-shadow: inset 0 0 50px -20px var(--quaternary-color);
        box-shadow: inset 0 0 50px -20px var(--quaternary-color);
    }


</style>